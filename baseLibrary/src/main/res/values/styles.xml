<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app.theme.colorPrimary</item>
        <item name="actionMenuTextColor">@color/app.text</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/app.theme.colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/app.theme.colorAccent</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/app.theme.background_f7f7f7</item>
        <!--底部导航栏颜色-->
        <!--<item name="android:navigationBarColor"></item>-->
        <!--Appbar背景色-->
        <item name="android:colorPrimary">@color/app.theme.colorPrimaryDark</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/app.theme.background</item>
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/app.theme.background_dadada</item>
    </style>





    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>


    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景模糊-->
    </style>



    <style name="App.Theme" parent="AppTheme">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--actionbar text color-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>


